# Database connection (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://app_user:app_password@pgsql1.calserver.eu:5432/histhack?schema=public"

# JWT secret for signing tokens
JWT_SECRET="super-secret-jwt-key"

# Redis (BullMQ) connection
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# S3-compatible storage credentials
AWS_ACCESS_KEY_ID="minio-access-key"
AWS_SECRET_ACCESS_KEY="minio-secret-key"
AWS_REGION="eu-central-1"
AWS_S3_BUCKET="histhack-uploads"
# Optional custom endpoint/public URL for non-AWS providers
AWS_S3_ENDPOINT="https://minio.example.com"
AWS_S3_PUBLIC_URL_BASE="https://cdn.example.com/media"
